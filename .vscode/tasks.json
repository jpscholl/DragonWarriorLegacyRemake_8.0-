{
        "version": "2.0.0",
        "tasks": [
            {
                "label": "DM",
                "type": "shell",
                "command": "D:/GAMES/Byond/bin/dm.exe", // Adjust path to your dm.exe
                "args": ["CD:/projects/YourProject/YourProject.dme"], // Adjust path to your .dme file
                "problemMatcher": {
                    "owner": "dm",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^([^:]+):(\\\\d+):([^:]+): (.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3
                    }
                }
            }
        ]
    }